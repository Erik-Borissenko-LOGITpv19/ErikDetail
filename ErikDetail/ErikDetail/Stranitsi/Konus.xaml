<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ErikDetail.Stranitsi.Konus">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Это называется конус. Нажми на кнопку чтобы перейти по ссылке и узнать подробнее про конус."
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="Medium"/>
            <Image Source="conefigure.png" VerticalOptions="CenterAndExpand"></Image>
            <Button x:Name="ConeFurmula" BackgroundColor="Red" Text="Сайт про конус" Clicked="ConeFurmula_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>