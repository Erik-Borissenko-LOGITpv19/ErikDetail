<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ErikDetail.Stranitsi.Pramoygolnik">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Это называется прямоугольник. Нажми на кнопку чтобы перейти по ссылке и узнать подробнее про прямоугольник."
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="Medium"/>
            <Button x:Name="prjamoygolnik" BackgroundColor="Red" Text="Сайт про прямоугольник" Clicked="prjamoygolnik_Clicked"></Button>
            <Image Source="prjamfigure.png" VerticalOptions="CenterAndExpand"></Image>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>