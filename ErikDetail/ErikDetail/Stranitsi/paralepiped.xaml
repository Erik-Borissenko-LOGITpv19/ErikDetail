<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ErikDetail.Stranitsi.paralepiped">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Это называется параллелепипед. Нажми на кнопку чтобы перейти по ссылке и узнать подробнее про параллелепипед"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="Medium"/>
            <Button x:Name="paral" BackgroundColor="Red" Text="Сайт про параллепипед" Clicked="paral_Clicked"></Button>
            <Image Source="paral.jpg" VerticalOptions="CenterAndExpand"></Image>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>