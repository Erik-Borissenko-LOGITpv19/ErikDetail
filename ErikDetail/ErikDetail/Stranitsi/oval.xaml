<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ErikDetail.Stranitsi.oval">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Это называется овал. Нажми на кнопку чтобы перейти по ссылке и узнать подробнее про овал."
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="Medium"/>
            <Button x:Name="OvalFigure" BackgroundColor="Red" Text="Сайт про овал" Clicked="OvalFigure_Clicked"></Button>
            <Image Source="Ovalfigure.png" VerticalOptions="CenterAndExpand"></Image>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>