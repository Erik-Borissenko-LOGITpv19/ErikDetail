<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ErikDetail.Stranitsi.kryg">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Это называется кругом. Нажми на кнопку чтобы перейти по ссылке и узнать подробнее про круг."
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="Medium"/>
            <Button x:Name="Circlefigure" BackgroundColor="Red" Text="Сайт про круг" Clicked="Circlefigure_Clicked"></Button>
            <Image Source="circlefigure.png" VerticalOptions="CenterAndExpand"></Image>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>