<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ErikDetail.Stranitsi.kvadrat">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Это называется квадрат. Нажми на кнопку чтобы перейти по ссылке и узнать подробнее про квадрат."
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="Medium"/>
            <Button x:Name="CubeFigure" BackgroundColor="Red" Text="Сайт про квадрат" Clicked="CubeFigure_Clicked"></Button>
            <Image Source="cubefigure.png" VerticalOptions="CenterAndExpand"></Image>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>