<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ErikDetail.Stranitsi.treygolnik">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Это называется треугольник. Нажми на кнопку чтобы перейти по ссылке и узнать подробнее про треугольник."
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="Medium"/>
            <Button x:Name="Triangle" BackgroundColor="Red" Text="Сайт про треугольник" Clicked="Triangle_Clicked"></Button>
            <Image Source="trianglefig.png" VerticalOptions="CenterAndExpand"></Image>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>